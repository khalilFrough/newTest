<%= form_with(model: user, local: true) do |form| %>
    <% if user.errors.any? %>
        <div id="error_explanation">
<!--          <h2><%##= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>-->

          <ul>
            <% user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group row">
      <%= form.label :email, for:"email", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= form.email_field :email, class:"form-control", placeholder: "enter user name" %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label :pass, for:"pass", class: "col-sm-2 col-form-label" %>

      <div class="col-sm-10">
        <%= form.password_field :password, class:"form-control", placeholder: "8-20 characters" %>
      </div>
    </div>

    <div class="form-group row">
      <%= form.label :pass, for:"confirm-password", class: "col-sm-2 col-form-label" %>

      <div class="col-sm-10">
        <%= form.password_field :password_confirmation, class:"form-control", placeholder: "confirm password" %>

      </div>
    </div>

    <div class="form-group row">
      <%= form.label :mobile, for:"mobile", class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= form.text_field :mobile, class:"form-control", placeholder: "mobile number" %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2"></label>
      <div class="col-sm-10">
        <%= form.submit 'sign up', class: "btn btn-block login-btn" %>
      </div>
    </div>
<% end %>