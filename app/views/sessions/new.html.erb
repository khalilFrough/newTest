<% if flash[:alert] %>
    <p id="notice"><%= flash[:alert] %></p>
<% end %>

<div class="main">
  <div class="container pt-3">
    <div class="col-sm-5 login-form shadow bg-white">
      <h1 class="text-center mt-4 mb-5">
        <b>LOGIN</b>
      </h1>
      <%= form_tag do %>

          <div class="form-group row">
            <label for="username" class="col-sm-2 col-form-label">username</label>
            <div class="col-sm-10">
              <%= email_field_tag :email,'', class: "form-control", placeholder: "enter your username" %>
            </div>
          </div>
          <div class="form-group row">
            <label for="password" class="col-sm-2 col-form-label">password</label>
            <div class="col-sm-10">
              <%= password_field_tag :password,'', class: "form-control", placeholder: "enter your password"%>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-sm-2"></div>
            <div class="col-sm-8">
              <%= check_box_tag :remember_me %>
              <%= label_tag "remember me" %>
            </div>
          </div>

          <div class="form-group row">
            <label for="password" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
              <%= submit_tag 'login', class: "btn btn-block login-btn"%>
            </div>
          </div>
      <% end %>
      <a href="/signup" class="register-link">
        <u>
          register
        </u>
      </a>
    </div>
  </div>
</div>