<div class="post-and-comments">
  <div class="container pc-bg">
    <div class="row no-gutters">
      <div class="col-sm-12">
        <div class="recent-post-comment">
          <div class="post-header">
            <a href="#">My</a>
            <span>comments:</span>
          </div>
          <ul class="comment-list">
            <% @comments.each do |comment| %>
                <li><span><%= comment.created_at.strftime("%d-%m-%Y") %></span> <%= link_to comment.blog.title, blog_path(comment.blog) %> <span>comment:</span>
                  <ul class="comments">
                    <li class="row ml-3 mr-3">
                      <div class="col-sm-10">
                        <%= comment.body %>
                      </div>
                      <div class="col-sm-2">
                        <%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' } %>
                      </div>
                    </li>
                  </ul>
                </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
