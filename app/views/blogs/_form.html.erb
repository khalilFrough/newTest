
<%= form_with(model: blog, local: true) do |form| %>
    <% if blog.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(blog.errors.count, "error") %> prohibited this blog from being saved:</h2>

          <ul>
            <% blog.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="row">
      <div class="col-sm-3">
        <label class="sr-only" for="post-topic">Topic</label>
        <div class="input-group mb-2">
          <div class="input-group-prepend">
            <div class="input-group-text rounded-0 input-title">Topic</div>
          </div>

          <%= form.select :topic, options_for_select(Blog::TOPICS, 'News'), {class: "form-control"} %>

          <!--<select class="form-control" id="post-topic">-->
            <!--<option>A.I</option>-->
          <!--</select>-->
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-12 pr-4">
        <label class="sr-only" for="post-title">title</label>
        <%= form.label :title, class: "sr-only", for: "post-title" %>

        <div class="input-group mb-2 mr-sm-2">
          <div class="input-group-prepend">
            <div class="input-group-text rounded-0 input-title">Title</div>
          </div>
          <!--<input type="text" class="form-control" id="post-title" placeholder="Enter post title here">-->
          <%= form.text_field :title, class: "form-control", placeholder: "Enter post title here", required: true %>

        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-12 pr-4">
        <div class="form-group">
                        <!--<textarea class="form-control" id="post-body" rows="10"-->
                                  <!--placeholder="Enter your post here"></textarea>-->
          <%= form.text_area :body, class: "form-control", rows: 10, placeholder: "Enter your post here", required: true %>

        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-12">
        <%= form.submit 'Post', class: "btn rounded-0", style: "background: #40888a; color: white; width: 100px;"%>
        <%= link_to 'Cancel', url_for(:back), class: "btn rounded-0", style: "border: 1px #ced4da solid; width: 100px;" %>
      </div>
    </div>
<% end %>